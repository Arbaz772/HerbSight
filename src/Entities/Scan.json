{
  "name": "Scan",
  "type": "object",
  "properties": {
    "image_url": {
      "type": "string",
      "description": "URL of the uploaded plant image"
    },
    "identification": {
      "type": "object",
      "properties": {
        "common_name": {
          "type": "string"
        },
        "scientific_name": {
          "type": "string"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "alternative_names": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "uses": {
      "type": "object",
      "properties": {
        "edible": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "medicinal": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "recipes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "instructions": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "warnings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "caution",
              "danger"
            ]
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "notes": {
      "type": "string",
      "description": "User's personal notes about this scan"
    },
    "is_favorite": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "image_url"
  ]
}